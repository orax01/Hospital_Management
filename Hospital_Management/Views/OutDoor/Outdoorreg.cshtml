            var formObj = {
                Outer_ID: $('#Outer_ID').val(),
                Date: $('#Date').val(),
                Patient_Id: $('#Patient_Id').val(),
                Patient_Name: $('#Patient_Name').val(),
                Patient_DOJ: $('#Patient_DOJ').val(),
                Patient_DOB: $('#Patient_DOB').val(),
                Patient_Age: $('#Patient_Age').val(),
