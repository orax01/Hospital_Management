                type: $('#type').val(),
                sex: $('#sex').val(),
                Hight: $('#Hight').val(),
                Weight: $('#Weight').val(),
                BP: $('#BP').val(),
                Care_of: $('#Care_of').val(),
                Care_of_Name: $('#Care_of_Name').val(),
                Docter_Name: $('#Docter_Name').val(),
                Docter_fee: $('#Docter_fee').val(),
                Reg_fee: $('#Reg_fee').val(),
                Other_dorfee: $('#Other_dorfee').val(),
                Comment: $('#Comment').val(),
                Office: $('#Office').val()
            }
            $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                url: "/OutDoor/SubmiOutDoor",
                type: "POST",
                data: JSON.stringify({ obj: formObj }),
                success: function (obj) {
                    $(':input').val('');//clear all field
                }
            });
        });

        //*end of document.ready()*//
    });
</script>
